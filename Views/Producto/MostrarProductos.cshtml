@model AppLogins.ViewModels.MostrarProductoVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Listado.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Listado de Productos
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>IVA</th>
                        <th>Código de Barras</th>
                        <th>Estado</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model.Producto)
                    {
                        <tr>
                            <td>@producto.Id</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.TipoProducto</td>
                            <td>@producto.Iva</td>
                            <td>@producto.CodigoBarras</td>
                            <td>@producto.Estado</td>
                            <td>@producto.FechaCreacion.ToShortDateString()</td>
                            <td>
                                <form method="get" asp-controller="Producto" asp-action="EditarProducto" asp-route-id="@producto.Id">
                                    <button type="submit" class="btn btn-primary btn-sm btn-editar">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                </form>
                                <form method="post" asp-controller="Producto" asp-action="EliminarProducto" asp-route-id="@producto.Id">
                                    <button type="submit" class="btn btn-danger btn-sm btn-eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
