<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppLogins</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Styles/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-black bg-dark border-bottom box-shadow mb-3 navbar-fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LZS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="LoginUsers">Iniciar Sesion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Salir">Salir</a>
                        </li>
                    </ul>
                </div>
                <span class="navbar-toggler-icon" id="open-sidebar">&#9776;</span>
            </div>
        </nav>
    </header>

    <div class="sidebar" id="sidebar">
        <a href="javascript:void(0)" class="closebtn" id="close-sidebar">&times;</a>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="LoginUsers">Iniciar Sesion</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="VerProductos">Ver Productos</a>
            </li>
            

            @if (User.IsInRole("Administrador"))
            {
                <!-- Opciones adicionales para el administrador -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="RegistroUsers">Gestion de Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="RegistroProducto">Gestion de Producto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="TipoProducto" asp-action="RegistroTipoProducto">Gestion de Tipo de Producto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="CrearCliente">Ingresar Cliente</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Factura" asp-action="CrearFactura">Factura</a>
                </li>
            }
            else if (User.IsInRole("Cajero"))
            {
                <!-- Opciones adicionales para el cajero -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="CrearCliente">Ingresar Cliente</a>
                </li>              
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Factura" asp-action="CrearFactura">Factura</a>
                </li>
                

               
            }

        </ul>
    </div>

    <div class="main-content" id="main-content">
        <div class="container content-wrapper">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Lizandro Duran - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/estilos.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        document.getElementById('open-sidebar').addEventListener('click', function () {
            document.getElementById('sidebar').classList.add('open');
            document.getElementById('main-content').classList.add('shifted');
        });

        document.getElementById('close-sidebar').addEventListener('click', function () {
            document.getElementById('sidebar').classList.remove('open');
            document.getElementById('main-content').classList.remove('shifted');
        });
    </script>
</body>
</html>
