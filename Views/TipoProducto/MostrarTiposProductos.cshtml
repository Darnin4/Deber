@model AppLogins.ViewModels.MostrarTipoProductoVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Listado.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Listado de Tipos de Producto
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipoProducto in Model.TipoProducto)
                    {
                        <tr>
                            <td>@tipoProducto.Id</td>
                            <td>@tipoProducto.Tipo</td>
                            <td>@tipoProducto.Estado</td>
                            <td>@tipoProducto.FechaCreacion.ToShortDateString()</td>
                            <td>
                                <form method="get" asp-controller="TipoProducto" asp-action="EditarTipoProducto" asp-route-id="@tipoProducto.Id">
                                    <button type="submit" class="btn btn-primary btn-sm btn-editar">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                </form>
                                <form method="post" asp-controller="TipoProducto" asp-action="EliminarTipoProducto" asp-route-id="@tipoProducto.Id">
                                    <button type="submit" class="btn btn-danger btn-sm btn-eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
