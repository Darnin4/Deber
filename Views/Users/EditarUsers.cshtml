@model AppLogins.ViewModels.EditarUsersVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Editar.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="titulo-formulario">Editar Usuario</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditarUsersPost" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label for="NombreUsuario">Nombre de Usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Clave">Clave</label>
                    <input asp-for="Clave" type="password" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Rol">Rol</label>
                    @Html.DropDownListFor(model => model.Rol, new SelectList(Model.Roles), new { @class = "form-control" })
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Estado">Estado</label>
                    @Html.DropDownListFor(model => model.Estado, new SelectList(Model.Estados), new { @class = "form-control" })
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="MostrarUsers" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
