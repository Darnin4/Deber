@model AppLogins.ViewModels.LoginUsersVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>Login Usuarios</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Iniciar Sesión
                </div>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="LoginUsers" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Nombre de Usuario" required asp-for="NombreUsuario" />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Clave" />

                        <div class="form-group">
                            <label asp-for="Rol" class="control-label"></label>
                            @Html.DropDownListFor(model => model.Rol, new SelectList(Model.Roles), new { @class = "form-control mb-3" })
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <p>¿No tienes una cuenta? Comunicate con el Administrador.</p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
