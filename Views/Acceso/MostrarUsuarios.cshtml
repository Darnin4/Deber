@model AppLogins.ViewModels.MostrarUsuarioVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/Listado.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            @Model.Titulo
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id Usuario</th>
                        <th>Nombre Completo</th>
                        <th>Correo</th>
                        <th>Clave</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>@usuario.IdUsuario</td>
                            <td>@usuario.NombreCompleto</td>
                            <td>@usuario.Correo</td>
                            <td>@Html.Raw("********")</td>
                            <td>
                                <form method="get" asp-action="EditarUsuario" asp-route-id="@usuario.IdUsuario">
                                    <button type="submit" class="btn btn-primary btn-sm btn-editar" >
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                </form>
                                <form method="post" asp-action="EliminarUsuario" asp-route-id="@usuario.IdUsuario">
                                    <button type="submit" class="btn btn-danger btn-sm btn-eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
