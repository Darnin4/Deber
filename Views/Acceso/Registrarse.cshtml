@model AppLogins.ViewModels.UsuarioVMS
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title>Registrarse</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Registro.css" asp-append-version="true" />

</head>
<body>
    <div class="container mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Regístrate
                </div>
                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                        <div class="form-group">
                            <label asp-for="NombreCompleto" class="control-label"></label>
                            <input class="form-control mb-3" asp-for="NombreCompleto" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Correo" class="control-label"></label>
                            <input class="form-control mb-3" asp-for="Correo" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Clave" class="control-label"></label>
                            <input class="form-control mb-3" type="password" asp-for="Clave" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmarClave" class="control-label"></label>
                            <input class="form-control mb-3" type="password" asp-for="ConfirmarClave" />
                            <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Regístrate</button>
                        </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }

                        <p>¿Ya tienes una cuenta?<a asp-controller="Acceso" asp-action="Login">Iniciar Sesión</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
